<article>
	<ResponsiveImage
		@if="post.featured_image"
		class="aspect-square object-cover object-center rounded-xs"
		:image="post.featured_image"
		:alt="post.title ~ ' featured image'"
	/>
	<div class="mt-3">
		<h2 class="h4">{{ post.title }}</h2>
		<p class="text-xs text-gray-400">{{ post.date() }}</p>
		<p class="mt-2 text-gray-500 text-sm max-w-lg">{{ post.excerpt }}</p>
		<Button class="mt-4" variant="secondary" size="sm" :href="post.permalink">
			<span aria-hidden="true">Read More</span>
			<span class="sr-only">Read full post</span>
		</Button>
	</div>
</article>